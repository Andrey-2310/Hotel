<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="User.User" table="users" catalog="hotel">
        <id name="userID" type="java.lang.Integer">
            <column name="userID" />
            <generator class="identity" />
        </id>
        <property name="login" type="string">
            <column name="login" length="20" not-null="true"  />
        </property>
        <property name="password" type="string">
            <column name="password" length="20" not-null="true" unique="true" />
        </property>
        <property name="email" type="string">
            <column name="email" length="20" not-null="true" unique="true" />
        </property>
        <property name="numberOfRoom" type="java.lang.Integer">
            <column name="numberOfRoom"  not-null="true" unique="true" />
        </property>
        <property name="startDate" type="java.lang.Integer">
            <column name="startDate"  not-null="true" unique="true" />
        </property>
        <property name="finishDate" type="java.lang.Integer">
            <column name="finishDate"  not-null="true" unique="true" />
        </property>

    </class>
</hibernate-mapping>